<h1>New book</h1>
<%= form_with model:book,local:true do |f| %>
  <div>
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>
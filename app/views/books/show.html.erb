<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'users/info', user: @user %>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-8 offset-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <td width="20%">
            <%= image_tag @user.get_profile_image, size:'100x100' %><br>
            <%= link_to @user.name, @user %>
          </td>
          <td width="20%"><%= @books.title %></td>
          <td><%= @books.body %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'users/info', user: @user %>
      <%= render 'layouts/form', book: @book %>
    </div>
    <div class="col-8">
      <h1>Book detail</h1>
      <table>
        <tr>
          <td>
            <%= image_tag @user.get_profile_image, size:'100x100' %><br>
            <%= link_to @user.name, @user %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
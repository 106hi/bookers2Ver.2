<script stc="FadeIn.js"></script>
<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'users/info', user: current_user %>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-8 offset-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th width="10%"></th>
            <th width="30%">Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr class="fade-in fade-in-up scroll-in">
              <td><%= image_tag book.user.get_profile_image, size:'75x75' %></td>
              <td><%= link_to book.title,book %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
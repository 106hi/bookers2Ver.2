<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'info', user: @user %>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-8 offset-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th width="15%"></th>
            <th width="35%">Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image, size:'75x75' %></td>
              <td><%= link_to book.title, book %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>